#!/bin/bash
#
# create linkedscripts entries for tpm2deb.cfg
#

source $1

mbn () {
  bn=$(basename $1)
  bn=$(echo $bn | sed -e 's/\.[^.]*$//')
  echo -n "$bn"
}

for i in $texmf_scripts ; do
  echo "linkedscript;texmf/scripts/$i;$(mbn $i)"
done

for i in $texmf_dist_scripts ; do
  echo "linkedscript;texmf-dist/scripts/$i;$(mbn $i)"
done


